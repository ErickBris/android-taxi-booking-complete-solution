<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_padding_5"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        card_view:cardCornerRadius="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">
    <com.nas.cruzer.helper.TextViewPlaner
        android:id="@+id/drivertimeDate"
        android:padding="@dimen/general_padding_5"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:textSize="@dimen/font_14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:customFont="PLANER"/>
    <com.nas.cruzer.helper.TextViewPlaner
        android:id="@+id/driverNameTv"
        android:padding="@dimen/general_padding_5"
        android:gravity="center|left"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:customFont="PLANER"/>
    <com.nas.cruzer.helper.TextViewPlaner
        android:id="@+id/driverFromTv"
        android:padding="@dimen/general_padding_5"
        android:gravity="center|left"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:customFont="PLANER"/>

    <com.nas.cruzer.helper.TextViewPlaner
        android:id="@+id/driverDestinationTv"
        android:padding="@dimen/general_padding_5"
        android:gravity="center|left"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:customFont="PLANER"/>
</LinearLayout>
    <com.nas.cruzer.helper.TextViewPlaner
        android:id="@+id/driverAccept"
        android:paddingRight="@dimen/general_padding_10"
        android:paddingTop="@dimen/general_padding_5"
        android:paddingLeft="@dimen/general_padding_5"
        android:paddingBottom="@dimen/general_padding_5"
        android:layout_gravity="right"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="PLANER"/>

    </android.support.v7.widget.CardView>
</LinearLayout>
