<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10sp">
    <TextView
        android:textColor="#434343"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Information"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >
        <LinearLayout
            android:paddingBottom="@dimen/general_padding_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nas.cruzer.helper.TextViewPlaner
                android:padding="@dimen/general_padding_10"
                android:text="@string/icon_user"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_16"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:customFont="FONTAWSOME" />
            <com.nas.cruzer.helper.TextViewPlaner
                android:id="@+id/userRequestDetailsName"
                android:paddingRight="@dimen/general_padding_20"
                android:paddingLeft="@dimen/general_padding_20"
                android:background="@color/white"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:customFont="PLANER" >

            </com.nas.cruzer.helper.TextViewPlaner>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/general_padding_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nas.cruzer.helper.TextViewPlaner
                android:padding="@dimen/general_padding_10"
                android:text="@string/icon_phone"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_16"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:customFont="FONTAWSOME" />
            <com.nas.cruzer.helper.TextViewPlaner
                android:id="@+id/userRequestDetailsNumber"
                android:paddingRight="@dimen/general_padding_20"
                android:paddingLeft="@dimen/general_padding_20"
                android:background="@color/white"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:customFont="PLANER" >

            </com.nas.cruzer.helper.TextViewPlaner>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/general_padding_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nas.cruzer.helper.TextViewPlaner
                android:padding="@dimen/general_padding_10"
                android:text="@string/icon_location"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_16"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:customFont="FONTAWSOME" />
            <com.nas.cruzer.helper.TextViewPlaner
                android:id="@+id/userRequestDetailsPickupLocation"
                android:paddingRight="@dimen/general_padding_20"
                android:paddingLeft="@dimen/general_padding_20"
                android:background="@color/white"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:customFont="PLANER" >

            </com.nas.cruzer.helper.TextViewPlaner>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/general_padding_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nas.cruzer.helper.TextViewPlaner
                android:padding="@dimen/general_padding_10"
                android:text="@string/icon_drop"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_16"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:customFont="FONTAWSOME" />
            <com.nas.cruzer.helper.TextViewPlaner
                android:id="@+id/userRequestDetailsDropLocation"
                android:paddingRight="@dimen/general_padding_20"
                android:paddingLeft="@dimen/general_padding_20"
                android:background="@color/white"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:customFont="PLANER" >

            </com.nas.cruzer.helper.TextViewPlaner>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/driverTrackBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/my_button"
        android:text="Track Driver" />
    <TextView
        android:textColor="#434343"
        android:padding="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track the location of taxi till the driver reaches your pickup pint"
        android:textSize="14sp" />

</LinearLayout>